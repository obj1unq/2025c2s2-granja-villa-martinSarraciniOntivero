import wollok.game.*
import personaje.*
import cultivos.*

program farmville {
	//  CONFIG	
	game.title("La granja")
	game.height(10)
	game.width(10)
	game.ground("ground.png")

	//  VISUALES
 	game.addVisualCharacter(personaje)
 	//game.addVisual(new Maiz()) // Se agrega a modo de prueba
 	keyboard.m().onPressDo({personaje.sembrar(new Maiz(position = personaje.position()))})
	keyboard.t().onPressDo({personaje.sembrar(new Tomaco(position = personaje.position()))})
	keyboard.o().onPressDo({personaje.sembrar(new Trigo(position = personaje.position()))})
	keyboard.r().onPressDo({personaje.regar()})
 	//  COMIENZA
	game.start()
}
