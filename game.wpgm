import wollok.game.*
import personaje.*
import cultivos.*

program farmville {
	//  CONFIG	
	game.title("La granja")
	game.height(10)
	game.width(10)
	game.ground("ground.png")

	//  VISUALES
 	game.addVisualCharacter(personaje)
 	//game.addVisual(new Maiz()) // Se agrega a modo de prueba
 	keyboard.m().onPressDo({personaje.sembrarMaiz()})
	keyboard.n().onPressDo({personaje.sembrarTrigo()})
	keyboard.b().onPressDo({personaje.sembrarTomaco()})
 	//  COMIENZA
	game.start()
}
